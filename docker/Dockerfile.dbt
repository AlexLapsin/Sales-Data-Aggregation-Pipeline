# docker/Dockerfile.dbt
# Docker image for dbt development and production

FROM python:3.10-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV DBT_PROFILES_DIR=/app/dbt

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements first for better caching
COPY dbt/requirements.txt /app/dbt/requirements.txt

# Install Python dependencies
RUN pip install --upgrade pip \
    && pip install -r /app/dbt/requirements.txt

# Copy dbt project
COPY dbt/ /app/dbt/

# Create profiles directory
RUN mkdir -p ~/.dbt

# Set working directory to dbt project
WORKDIR /app/dbt

# Expose port for dbt docs
EXPOSE 8080

# Default command
CMD ["bash"]
