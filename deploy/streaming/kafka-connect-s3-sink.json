{
  "name": "sales-transactions-s3-sink",
  "config": {
    "connector.class": "io.confluent.connect.s3.S3SinkConnector",
    "tasks.max": "3",
    "topics": "sales_transactions",

    "s3.bucket.name": "raw-sales-pipeline-976404003846",
    "s3.region": "us-east-1",
    "s3.part.size": "26214400",
    "topics.dir": "",

    "flush.size": "100",
    "rotate.interval.ms": "300000",
    "rotate.schedule.interval.ms": "3600000",

    "format.class": "io.confluent.connect.s3.format.json.JsonFormat",
    "partitioner.class": "io.confluent.connect.storage.partitioner.TimeBasedPartitioner",
    "partition.duration.ms": "3600000",
    "path.format": "'streaming_data/year'=YYYY/'month'=MM/'day'=dd/'hour'=HH",
    "locale": "en",
    "timezone": "UTC",

    "storage.class": "io.confluent.connect.s3.storage.S3Storage",
    "s3.acl.canned": "bucket-owner-full-control",

    "errors.tolerance": "all",
    "errors.deadletterqueue.topic.name": "sales_transactions_dlq",
    "errors.deadletterqueue.topic.replication.factor": "1",
    "errors.deadletterqueue.context.headers.enable": "true",

    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false"
  }
}
