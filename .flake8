[flake8]
max-line-length = 140
extend-ignore = E203, W503, F401, F541, F841, W292, E402, E501, E712, E228, E722
per-file-ignores =
    notebooks/*:F821,E501
    tests/unit/spark/test_performance.py:F821
exclude =
    .venv,
    venv,
    .git,
    __pycache__,
    */target/*,
    */dbt_packages/*,
    *.egg-info,
    build,
    dist
