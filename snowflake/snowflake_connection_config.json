{
  "description": "Snowflake connection configuration for sales data pipeline",
  "environments": {
    "development": {
      "account": "${SNOWFLAKE_ACCOUNT}",
      "user": "${SNOWFLAKE_USER}",
      "password": "${SNOWFLAKE_PASSWORD}",
      "role": "${SNOWFLAKE_ROLE}",
      "warehouse": "${SNOWFLAKE_WAREHOUSE}",
      "database": "${SNOWFLAKE_DATABASE}",
      "schema": "${SNOWFLAKE_SCHEMA}"
    },
    "staging": {
      "account": "${SNOWFLAKE_ACCOUNT}",
      "user": "${SNOWFLAKE_USER}",
      "password": "${SNOWFLAKE_PASSWORD}",
      "role": "${SNOWFLAKE_ROLE}",
      "warehouse": "${SNOWFLAKE_WAREHOUSE}",
      "database": "${SNOWFLAKE_DATABASE}_STAGING",
      "schema": "${SNOWFLAKE_SCHEMA}"
    },
    "production": {
      "account": "${SNOWFLAKE_ACCOUNT}",
      "user": "${SNOWFLAKE_USER}",
      "password": "${SNOWFLAKE_PASSWORD}",
      "role": "${SNOWFLAKE_ROLE}",
      "warehouse": "${SNOWFLAKE_WAREHOUSE}",
      "database": "${SNOWFLAKE_DATABASE}_PROD",
      "schema": "${SNOWFLAKE_SCHEMA}"
    }
  },
  "connection_parameters": {
    "client_session_keep_alive": true,
    "client_session_keep_alive_heartbeat_frequency": 3600,
    "timezone": "UTC",
    "query_timeout": 300,
    "network_timeout": 60,
    "login_timeout": 120
  },
  "performance_settings": {
    "warehouse_auto_suspend": 300,
    "warehouse_auto_resume": true,
    "max_concurrency": 8,
    "statement_timeout": 3600
  },
  "security_settings": {
    "authenticator": "snowflake",
    "private_key_file": null,
    "private_key_passphrase": null,
    "token": null,
    "oauth_host": null
  },
  "data_loading": {
    "file_format": {
      "type": "JSON",
      "strip_outer_array": true,
      "date_format": "AUTO",
      "time_format": "AUTO",
      "timestamp_format": "AUTO"
    },
    "copy_options": {
      "on_error": "CONTINUE",
      "size_limit": 0,
      "purge": true,
      "return_failed_only": false,
      "match_by_column_name": "CASE_INSENSITIVE"
    },
    "stage_settings": {
      "stage_name": "KAFKA_STAGE",
      "url": "s3://your-bucket/kafka-data/",
      "credentials": "aws_iam_role=arn:aws:iam::ACCOUNT:role/SnowflakeRole",
      "encryption": "AWS_SSE_S3"
    }
  },
  "monitoring": {
    "enable_query_history": true,
    "enable_warehouse_monitoring": true,
    "alert_on_failures": true,
    "max_query_runtime_seconds": 1800
  }
}
